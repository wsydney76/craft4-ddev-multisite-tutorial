{# Simple pagination component #}

{% if pageInfo.totalPages > 1 %}
    <div class="mt-8 flex justify-between">
        <div>
            {% if pageInfo.prevUrl %}<a href="{{ pageInfo.prevUrl }}">&lt; {{ 'Previous Page'|t }}</a>{% endif %}
        </div>
        <div class="text-right">
            {% if pageInfo.nextUrl %}<a href="{{ pageInfo.nextUrl }}">{{ 'Next Page'|t }} &gt;</a>{% endif %}
        </div>
    </div>
{% endif %}